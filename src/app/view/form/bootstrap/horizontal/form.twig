<form class="form-horizontal" role="{% block role %}{% endblock %}" method="{% block method %}{% endblock %}">
    {% block fields %}{% endblock %}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="alert alert-danger hide" role="error-message"></div>
            <div class="alert alert-success hide" role="success-message"></div>
        </div>
    </div>

    {% block submit %}{% endblock %}
</form>