<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>{% block title %}Example.com{% endblock %}</title>

    {% block css %}
        {{ add_vendor_css('bootstrap/dist/css/bootstrap.min') }}
    {% endblock %}

    {% for file in get_css() %}
        <link href="{{ file }}" rel="stylesheet">
    {% endfor %}
</head>

<body>

{% block content %}{% endblock %}

<script>
    var app = {
        vars: {{ app.js|json_encode|raw }}
    };
</script>

{% block js %}
    {{ add_vendor_js('jquery/dist/jquery.min') }}
    {{ add_vendor_js('jquery-role/lib/jquery.role.min') }}
    {{ add_vendor_js('bootstrap/dist/js/bootstrap.min') }}
{% endblock %}

{% for file in get_js() %}
    <script src="{{ file }}"></script>
{% endfor %}
</body>
</html>
